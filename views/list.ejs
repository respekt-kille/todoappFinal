    <% newListItems.forEach((itemsFound)=>{ %>

      <form action="/delete"  method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=itemsFound._id%>" onChange="this.form.submit()">
        <p><%=  itemsFound.name%></p>
      </div>
      <input type="hidden" name="listName" value="<%=listTitle%>">
          </form>
      <% }); %>

      <form class="item" action="/" method="post">
